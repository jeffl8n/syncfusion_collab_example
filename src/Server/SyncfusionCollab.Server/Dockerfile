FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

COPY SyncfusionCollab.sln ./
COPY src/Server/SyncfusionCollab.Server/SyncfusionCollab.Server.csproj src/Server/SyncfusionCollab.Server/
RUN dotnet restore src/Server/SyncfusionCollab.Server/SyncfusionCollab.Server.csproj

COPY . .
WORKDIR /src/src/Server/SyncfusionCollab.Server
RUN dotnet publish SyncfusionCollab.Server.csproj -c Release -o /app/publish /p:UseAppHost=false

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS final
WORKDIR /app
COPY --from=build /app/publish .
ENV ASPNETCORE_URLS=http://+:8080
EXPOSE 8080
ENTRYPOINT ["dotnet", "SyncfusionCollab.Server.dll"]
